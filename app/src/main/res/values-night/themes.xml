<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LikeBalance" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#929292</item>
        <item name="colorPrimaryVariant">@color/main_icon</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ThemeOverlay.LikeBalance.AppWidgetContainer" parent="">
        <item name="appWidgetBackgroundColor">@color/light_blue_900</item>
        <item name="appWidgetTextColor">@color/light_blue_200</item>
    </style>
    <style name="MyButtonStyle" parent="android:style/Widget.Button">
        <item name="android:background">@drawable/commend_round_with_ripple_white</item>
        <item name="android:backgroundTint">@color/main_icon</item>
        <item name="android:textColor">@color/main_background</item>
    </style>
</resources>